@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudSpacer />
        <MudTextField T="string"
                      Label="Search"
                      Margin="Margin.Dense"
                      Variant="Variant.Outlined"
                      Adornment="Adornment.End"
                      AdornmentIcon="@Icons.Material.Filled.Search" />
        <MudSpacer />
        <MudTooltip Text="Rubal Walia">
            <MudButton>
                <MudAvatar Color="Color.Primary">RW</MudAvatar>
            </MudButton>
        </MudTooltip>
    </MudAppBar>
    <MudMainContent>
        <MudContainer Fixed>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>