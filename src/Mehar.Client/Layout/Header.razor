<style>
    .logo {
        width: 32px;
        height: 32px;
        filter: brightness(0) invert(1);
    }
</style>

<MudAppBar Dense Elevation="3">
    <MudLink Href="/"
             Class="d-flex flex-row"
             Color="Color.Inherit"
             Underline="Underline.None"
             title="Smart tax filing for every Canadian. / Déclaration intelligente pour chaque Canadien.">
        <MudImage Src="/images/reveno-icon.svg" Class="logo mr-2" />
        <MudText Typo="Typo.h5">Reveno</MudText>
    </MudLink>
    <MudSpacer />
    <MudMenu Icon="@SvgIcons.LANGUAGE"
             EndIcon="@Icons.Material.Filled.KeyboardArrowDown"
             Color="Color.Inherit"
             TransformOrigin="Origin.TopRight"
             AnchorOrigin="Origin.BottomRight"
             Dense
             title="Language">
        <MudMenuItem Label="English" Icon="@SvgIcons.FLAG_ICONS_GB" />
        <MudMenuItem Label="French" Icon="@SvgIcons.FLAG_ICONS_FR" />
    </MudMenu>
    <MudToggleIconButton Icon="@Icons.Material.Filled.DarkMode"
                         ToggledIcon="@Icons.Material.Filled.LightMode"
                         Color="Color.Inherit"
                         title="@(IsDarkMode ? "Light Mode" : "Dark Mode")"
                         Toggled="@IsDarkMode"
                         ToggledChanged="ToggleDarkMode" />
    <MudMenu TransformOrigin="Origin.TopRight"
             AnchorOrigin="Origin.BottomRight"
             Color="Color.Inherit"
             Dense>
        <ActivatorContent>
            <MudAvatar Elevation="4">RW</MudAvatar>
        </ActivatorContent>
        <ChildContent>
            <MudMenuItem Label="Profile" Icon="@SvgIcons.USER" />
            <MudMenuItem Label="Options" Icon="@SvgIcons.GEARS" />
            <MudDivider />
            <MudMenuItem Label="Sign Out" Icon="@SvgIcons.ARROW_RIGHT_FROM_BRACKET" />
        </ChildContent>
    </MudMenu>
</MudAppBar>
