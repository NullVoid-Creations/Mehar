<style>
    .sidebar {
        height: calc(100vh - (var(--mud-appbar-height) - var(--mud-appbar-height) / 4));
    }

    .search .mud-input-root {
        border-radius: 9999px !important;
    }

    .search .mud-input-outlined fieldset {
        border-radius: 9999px !important;
    }

    .search .mud-input-control {
        border-radius: 9999px !important;
    }

    .mud-list-item {
        padding-top: 4px;
        padding-bottom: 4px;
    }

    .mud-list-item-icon {
        margin-right: 4px;
        min-width: 32px;
    }

    .mud-selected-item {
        border-inline-end: solid;
        border-inline-end-width: 2px;
    }
</style>

<MudPaper Square Class="sidebar d-flex flex-column" MinWidth="320px" Elevation="1">
    <MudTextField T="string"
                  Placeholder="Search"
                  Variant="Variant.Outlined"
                  Margin="Margin.Dense"
                  Adornment="Adornment.End"
                  Clearable
                  AdornmentIcon="@Icons.Material.Filled.Search"
                  Class="pa-2 search flex-grow-0" />
    <MudList T="string" Class="flex-grow-1 overflow-auto">
        <MudListItem Text="Available Controls" Icon="@SvgIcons.RECTANGLE_LIST" Href="/controls" />
        <MudListItem Text="Identification and Other Information" Icon="@SvgIcons.ADDRESS_CARD">
            <NestedList>
                <MudListItem Text="Identification" Icon="@SvgIcons.ID_BADGE" Href="/identification" />
                <MudListItem Text="Residence" Icon="@SvgIcons.HOUSE" Href="/residence" />
                <MudListItem Text="Spouse or common-law partner" Icon="@SvgIcons.PERSON_HALF_DRESS" Href="/partner" />
                <MudListItem Text="Tax administration agreements" Icon="@SvgIcons.RECTANGLE_LIST" />
                <MudListItem Text="Elections Canada" Icon="@SvgIcons.RECTANGLE_LIST" Href="/elections-canada" />
                <MudListItem Text="Indian Act - Exempt income" Icon="@SvgIcons.RECTANGLE_LIST" />
                <MudListItem Text="Foreign property" Icon="@SvgIcons.HOUSE_FLAG" />
            </NestedList>
        </MudListItem>
    </MudList>
</MudPaper>